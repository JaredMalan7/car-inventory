@inject CarInventory.Services.AuthService Auth // Authentication service
@inject NavigationManager Nav
@implements IDisposable // Required to clean up event subscriptions

<!-- Top navigation bar -->
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CarInventory</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable">
    <nav class="nav flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>
        </div>

        @if (Auth.IsLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/inventory">
                    Inventory
                </NavLink>
            </div>

            <div class="nav-item px-3 mt-3">
                <button class="btn btn-outline-danger w-100" @onclick="Logout">
                    Logout
                </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3 mt-3">
                <NavLink class="nav-link" href="/login">
                    Login
                </NavLink>
            </div>
        }

    </nav>
</div>

@code {
    // Subscribe to authentication changes so the menu updates dynamically
    protected override void OnInitialized()
    {
        Auth.OnAuthChanged += HandleAuthChanged;
    }

    // Forces the component to re-render when login/logout occurs
    void HandleAuthChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    // Logs the user out and redirects to the login page
    void Logout()
    {
        Auth.Logout();
        Nav.NavigateTo("/login", true);
    }

    // Unsubscribe from events to prevent memory leaks
    public void Dispose()
    {
        Auth.OnAuthChanged -= HandleAuthChanged;
    }
}