@page "/inventory"
@using CarInventory.Models
@using CarInventory.Services
@inject CarInventory.Data.AppDbContext Db
@inject NavigationManager Nav

<h3>Car Inventory</h3>
<input class="form-control mb-3" placeholder="Search by make or model..." @bind="searchText" @bind:event="oninput" />

<select class="form-select mb-3" @bind="yearFilter">
    <option value="">All Years</option>
    @foreach (var year in Cars.Select(c => c.Year).Distinct().OrderBy(y => y))
    {
        <option value="@year">@year</option>
    }
</select>
<button class="btn btn-primary" @onclick="AddCar">Add New Car</button>
<select class="form-select mb-3" @bind="sortOption" @bind:event="onchange">
    <option value="">Sort...</option>
    <option value="price">Price</option>
    <option value="model">Model</option>
    <option value="year">Year</option>
</select>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in SortedCars)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Price</td>
                <td>
                    <button class="btn btn-sm btn-info" @onclick="() => EditCar(car.Id)">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="() => Delete(car.Id)">Delete</button>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(car.ImageFileName))
                    {
                        <img src=@($"images/{car.ImageFileName}") style="width:80px;" />
                    }
                </td>
            </tr>
        }
    </tbody>

</table>

@code {
    private List<Car> Cars = new();

    private string searchText = "";
    private string yearFilter = "";

    private string sortOption = "";

    protected override void OnInitialized()
    {
        Cars = Db.Cars.ToList();
    }

    void AddCar() => Nav.NavigateTo("/addcar");
    void EditCar(int id) => Nav.NavigateTo($"/editcar/{id}");

    void Delete(int id)
    {
        var car = Db.Cars.FirstOrDefault(c => c.Id == id);
        if (car != null)
        {
            Db.Cars.Remove(car);
            Db.SaveChanges();
        }
        Cars = Db.Cars.ToList();
    }

    private IEnumerable<Car> FilteredCars =>
    Cars.Where(c =>
    (string.IsNullOrWhiteSpace(searchText) ||
    c.Make.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
    c.Model.Contains(searchText, StringComparison.OrdinalIgnoreCase))
    && (string.IsNullOrWhiteSpace(yearFilter) ||
    c.Year.ToString() == yearFilter)
    );

    private IEnumerable<Car> SortedCars =>
    sortOption switch
    {
        "price" => FilteredCars.OrderBy(c => c.Price),
        "model" => FilteredCars.OrderBy(c => c.Model),
        "year" => FilteredCars.OrderBy(c => c.Year),
        _ => FilteredCars
    };
}